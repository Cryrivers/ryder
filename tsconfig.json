{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "stripInternal": true,
    "outDir": "lib",
    "types": []
  },
  "include": ["./src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/__tests__"]
}
